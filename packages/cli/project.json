{
  "name": "@tech-leads-club/agent-skills",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "tags": [
    "scope:cli"
  ],
  "implicitDependencies": [
    "skills-catalog"
  ],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": [
        "skills-catalog:generate-registry"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "inputs": [
        "production",
        "^production"
      ],
      "options": {
        "platform": "node",
        "outputPath": "packages/cli/dist",
        "format": [
          "esm"
        ],
        "bundle": true,
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.json",
        "assets": [
          {
            "glob": "README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "LICENSE",
            "input": ".",
            "output": "."
          },
          {
            "glob": "package.json",
            "input": ".",
            "output": "."
          }
        ],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          },
          "banner": {
            "js": "#!/usr/bin/env node"
          },
          "platform": "node"
        }
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    }
  }
}